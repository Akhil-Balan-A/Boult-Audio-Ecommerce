        .verification-container h2 {
            margin-bottom: 20px;
        }
        .verification-container input {
            width: 100%;
            max-width: 300px;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ddd;
            border-radius: 5px;
        }
        .verification-container button {
            width: 100%;
            padding: 10px;
            max-width: 300px;
            background-color: #108a7c;
